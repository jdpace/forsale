---
title: Welcome to Middleman
pageable: true
per_page: 3
---

<% page_articles.each_with_index do |article, i| %>
  <article class="<%= article.data.sold ? 'sold' : 'for-sale' %>">
    <h2>
      <%= link_to article.title, article %>
      <span><%= article.date.strftime('%b %e') %></span>
    </h2>
    <%= article.summary %>

    <ul class="images">
      <%= partial 'image', :locals => {:image => article.data.images.first} if article.data.images.first %>
    </ul>
  </article>
<% end %>

<% if paginate %>
  <p class='paginate'>
    <span>Page <%= page_number %> of <%= num_pages %></span>
    <% if prev_page %><%= link_to 'Prev', prev_page %><% end %>
    <% if next_page %><%= link_to 'Next', next_page %><% end %>
  </p>
<% end %>
